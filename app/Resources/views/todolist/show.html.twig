{% extends 'base.html.twig' %}

{% block body %}
    <h1>TodoList</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todoList.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ todoList.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ todoList.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('todolist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('todolist_edit', { 'id': todoList.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
