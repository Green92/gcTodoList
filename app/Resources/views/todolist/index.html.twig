{% extends 'base.html.twig' %}

{% block body %}
    <h1>TodoList list</h1>

    <ul class="list-group">
        {% for todoList in todoLists %}
            <li class="list-group-item clearfix">
                <div class="pull-right">
                    <a href="{{ path('todolist_show', { 'id': todoList.id }) }}" class="btn btn-default">Show</a>
                    <a href="{{ path('todolist_edit', { 'id': todoList.id }) }}" class="btn btn-default">Edit</a>
                </div>
                <h3 class="list-group-item-heading">
                    {{ todoList.name }}
                </h3>
                <div class="list-group-item-text">
                    <p>Type: {{ todoList.type }}</p>
                </div>
            </li>
        {% endfor %}
    </ul>

    <div class="clearfix">
        <a href="{{ path('todolist_new') }}" class="btn btn-default pull-right">Create a new entry</a>
    </div>
{% endblock %}
